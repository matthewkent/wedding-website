  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width", :name => "viewport"}/
    %title= "Ali and Matt#{" - #{data.page.title}" if data.page.title}"
    = stylesheet_link_tag "site.css"
    = javascript_include_tag "site.js"
  %body
    %nav.top-bar
      %ul
        %li.name
          %h1
            %a{:href => "#"}
              Ali and Matt - 2/22/2014
        %li.toggle-topbar
          %a{:href => "#"}

    .row
      .large-12.columns
        %h1
          %a{href: "/"}
            Ali and Matt
    .row
      .large-9.push-3.columns
        = yield
      .large-3.pull-9.columns
        .ul.side-nav
          %li{class: ("active" if data.page.active_nav == "registry")}
            %a{href: "/registry.html"}
              Registry
          %li{class: ("active" if data.page.active_nav == "party")}
            %a{href: "/party.html"}
              Wedding Party
          %li{class: ("active" if data.page.active_nav == "us")}
            %a{href: "/us.html"}
              Our Story
          %li{class: ("active" if data.page.active_nav == "venue")}
            %a{href: "/venue.html"}
              The Venue
